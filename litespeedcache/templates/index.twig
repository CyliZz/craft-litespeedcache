{% extends '_layouts/cp' %}
{% import "_includes/forms" as forms %}

{% set title = 'Clear Litespeed Cache'|t %}

{% set content %}
  <p><strong>Please note:</strong> You should only need to clear the cache if you have updated a global item (i.e. the header or navigation).</p>
  <form method="post" action="">
    {{ getCsrfInput() }}
    <input type="hidden" name="action" value="liteSpeedCache/clearLitespeedCache" />
    <input type="hidden" name="redirect" value="litespeedcache" />
    <div class="buttons">
      <input type="submit" class="btn submit" value="{{ 'Clear LiteSpeed Cache'|t }}">
    </div>
  </form>
{% endset %}