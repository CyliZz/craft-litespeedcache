{% import "_includes/forms" as forms %}

{{ forms.lightswitchField({
    label: "Clear caches per URL?"|t,
    id: 'lsPerUrl',
    name: 'lsPerUrl',
    on: settings.lsPerUrl
}) }}

{{ forms.textField({
    label: 'LSCache directory location',
    instructions: 'Enter the full absolute path to your LSCache directory. If you are not sure where this folder is located, ask your hosting provider',
    id: 'lsCacheLoc',
    name: 'lsCacheLoc',
    value: settings['lsCacheLoc']
}) }}